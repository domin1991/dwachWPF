<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dwach="clr-namespace:DwachWPF.Controls;assembly=Controls"
        xmlns:local="clr-namespace:DwachWPF.Sample" 
        x:Class="DwachWPF.Sample.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:Model/>
    </Window.DataContext>
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <dwach:FlagsControl Source="{Binding Flags, Mode=TwoWay}" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Line Grid.Column="1" Y2="{Binding ActualHeight, ElementName=grid, Mode=OneWay}" StrokeThickness="1" Stroke="Black"/>
        <dwach:FlagsControl Source="{Binding Flags, Mode=TwoWay}" Grid.Column="1"  Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</Window>
